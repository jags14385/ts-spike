{
  "compilerOptions": {
    /* Basic Options */
    "target":
      "es5" /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', or 'ESNEXT'. */,
    "module": "commonjs",
    "moduleResolution":
      "node" /* Specify module code generation: 'none', commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'. */,
    "lib": [
      "es2015"
    ] /* Specify library files to be included in the compilation:  */,
    "outDir": "tmp/" /* Redirect output structure to the directory. */,
    /* Strict Type-Checking Options */
    "strict": true /* Enable all strict type-checking options. */,
    "sourceMap": false,
    "declaration": false,
    "removeComments": false,
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "cucumber"]
  }
}
